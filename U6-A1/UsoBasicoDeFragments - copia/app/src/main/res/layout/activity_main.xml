<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <LinearLayout
      android:id="@+id/contenedor"
      android:layout_width="match_parent"
      android:layout_height="300dp"
      android:orientation="vertical">

  </LinearLayout>

    <Button
        android:id="@+id/btnFragmentoA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragmento A"
        app:layout_constraintTop_toBottomOf="@id/contenedor"/>
    <Button
        android:id="@+id/btnFragmentoB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragmento B"
        app:layout_constraintTop_toBottomOf="@+id/contenedor"
        app:layout_constraintLeft_toRightOf="@id/btnFragmentoA"/>

</android.support.constraint.ConstraintLayout>